---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import CourseCard from "@/components/CourseCard.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-2xl font-bold sm:my-8 sm:text-3xl">
        Shopify theme developer and Trainer
      </h1>

      <p>
        I build, customize, and optimize Shopify themes to match your brand and
        boost conversions. Plus, I teach developers how to do the same through
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/courses"
        >
          my courses
        </LinkButton>, <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="/posts"
        >
          blog
        </LinkButton>, and
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://www.youtube.com/@saadsaif97/videos"
        >
          YouTube channel
        </LinkButton>
      </p>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    <section id="services" class="pt-12 pb-6">
      <h2 class="mb-6 text-2xl font-semibold tracking-wide">Services</h2>

      <ul class="mb-6 grid grid-cols-1 gap-6 md:grid-cols-2">
        <ServiceCard
          title="Custom Shopify Development"
          description="Add custom features, modify existing theme functionality, or extend Shopify capabilities without heavy apps."
        />

        <ServiceCard
          title="Bug Fixes & Troubleshooting"
          description="Identify and fix Shopify theme bugs, compatibility issues, and performance bottlenecks quickly."
        />

        <ServiceCard
          title="Figma to Shopify Theme"
          description="Convert your Figma or design files into a high-performance, pixel-perfect Shopify theme."
        />

        <ServiceCard
          title="Ongoing Technical Support"
          description="Monthly support for store owners facing technical challenges, from small tweaks to large updates."
        />
      </ul>

      <div class="flex flex-col gap-4 sm:flex-row">
        <a
          href="https://calendly.com/saadgfx97/shopify-theme-development"
          target="_blank"
          rel="noopener"
          class="inline-block rounded border border-muted px-6 py-3 text-center text-sm font-medium text-white transition"
        >
          Book a Meeting
        </a>
        <a
          href="https://wa.me/+923314002075?text=Hi Saad, I am interested in your Shopify services"
          target="_blank"
          rel="noopener"
          class="inline-block rounded bg-green-600 px-6 py-3 text-center text-sm font-medium text-white transition hover:bg-green-700"
        >
          Chat on WhatsApp
        </a>
      </div>
    </section>

    <Hr />

    <section id="courses" class="pt-12 pb-6">
      <h2 class="mb-6 text-2xl font-semibold tracking-wide">Courses</h2>
      <p>
        Practical, real-world Shopify development. Learn step-by-step, build
        working features, and apply them in your own or client stores. Each
        course only $20, less than the cost of a small Shopify task.
      </p>
      <ul class="my-4 grid grid-cols-1 gap-6">
        <CourseCard
          title="Shopify Theme Development | Beginner to Advanced"
          language="Urdu"
          price="20"
          description="Learn Shopify theme architecture, Liquid, JavaScript APIs, and build a complete theme from scratch."
          enrollUrl="/courses"
        />

        <CourseCard
          title="10+ Real-World Shopify Projects with JavaScript"
          language="English"
          price="20"
          description="Build real Shopify store features like upsells, progress bars, swatches, and more using JavaScript."
          enrollUrl="/courses"
        />
      </ul>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
